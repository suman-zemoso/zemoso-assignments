	public void addAddOns(){
		
		System.out.println("Available AddOns are:");
		System.out.println("1. Cheese");
		System.out.println("2. Eggs");
		System.out.println("3. Veggies");
		System.out.println("4. Chicken");
		System.out.print("Enter the index numbers of the AddOns you want, separating it with a comma (,): ");
		
		
		
	}
}
